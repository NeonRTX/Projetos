    class Arqueiro : Personagem
    {

        int turnosArmadura = 0;
        public int turnosEspecial = 0;
        public bool Especial = false;

        public Arqueiro()
        {
            VidaInicial = 12;
            Vida = 12;
            Estamina = 3;
            Ataque = 4;
            ArmaduraBase = 16;
            Armadura = 16;
            Nome = "ARQUEIRO";
            Vivo = true;
            Nivel = 1;

        }

        public override void Atacar(Inimigo inimigo)
        {
            int acertoPersonagem;
            int dano;
            int dadoAcerto;

            dadoAcerto = dadoPersonagem.Next(1, 21);
            acertoPersonagem = Ataque + dadoAcerto;
            if (dadoAcerto >= 19 && Especial == false)
            {
                Console.WriteLine("=== JOGADA ARQUEIRO ===");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total: {acertoPersonagem}");
                Console.WriteLine("Voce CRITOU o ataque");
                dano = (dadoPersonagem.Next(1, 9) + Ataque) * 2;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                inimigo.Vida -= dano;
                if (inimigo.Vida < 0)
                {
                    inimigo.Vida = 0;
                }
            }
            else if (acertoPersonagem > inimigo.Armadura && Especial == false)
            {
                Console.WriteLine("=== JOGADA ARQUEIRO ===");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total para acertar: {acertoPersonagem}");
                Console.WriteLine("Voce acertou o ataque");
                dano = dadoPersonagem.Next(1, 9) + Ataque;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                inimigo.Vida -= dano;
                if (inimigo.Vida < 0)
                {
                    inimigo.Vida = 0;
                }
            }
            else if (acertoPersonagem < inimigo.Armadura && Especial == false)
            {

                Console.WriteLine("=== JOGADA ARQUEIRO ===");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total para acertar: {acertoPersonagem}");
                Console.WriteLine("Voce não acertou");
                Console.WriteLine("========================\n");

            }

            else if (dadoAcerto >= 19 && Especial == true)
            {
                Console.WriteLine("=== JOGADA ARQUEIRO ===");
                Console.WriteLine("PENETRAÇÃO DE ARMADURA ATIVADA");
                //Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                //Console.WriteLine($"Total: {acertoPersonagem}");
                Console.WriteLine("Voce CRITOU o ataque");
                dano = (dadoPersonagem.Next(1, 9) + Ataque) * 2;
                Console.WriteLine($"Dano total: {dano} ");
                Console.WriteLine("========================\n");
                inimigo.Vida -= dano;
                if (inimigo.Vida < 0)
                {
                    inimigo.Vida = 0;
                }
            }
            else if (acertoPersonagem < 19 && Especial == true)
            {
                Console.WriteLine("=== JOGADA ARQUEIRO ===");
                Console.WriteLine("PENETRAÇÃO DE ARMADURA ATIVADA");
                //Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                //Console.WriteLine($"Total para acertar: {acertoPersonagem}");
                //Console.WriteLine("Voce acertou o ataque");
                dano = dadoPersonagem.Next(1, 9) + Ataque;
                Console.WriteLine($"Dano total: {dano} ");
                Console.WriteLine("========================\n");
                inimigo.Vida -= dano;
                if (inimigo.Vida < 0)
                {
                    inimigo.Vida = 0;
                }
            }
        }

        public void VerificarArmadura()
        {
            if (Armadura != 18)
            {
                turnosArmadura++;

                if (turnosArmadura > 3)
                {
                    Armadura = 18;
                    turnosArmadura = 0;
                }
            }
        }

        public override void UsarEspecial(Inimigo inimigo)
        {
            Especial = true;
            Estamina--;
        }

        public void VerificarEspecial()
        {
            if (Especial == true)
                turnosEspecial++;
            if (turnosEspecial > 3)
            {
                Especial = false;
                turnosEspecial = 0;
            }

        }




    }

    class Clerigo : Personagem
    {
        int turnosArmadura = 0;

        public Clerigo()
        {
            VidaInicial = 10;
            Vida = 10;
            Estamina = 3;
            Ataque = 4;
            ArmaduraBase = 18;
            Armadura = 18;
            Nome = "CLÉRIGO";
            Vivo = true;
            Nivel = 1;
        }

        public override void Atacar(Inimigo inimigo)
        {
            int acertoPersonagem;
            int dano;
            int dadoAcerto;

            dadoAcerto = dadoPersonagem.Next(1, 21);
            acertoPersonagem = Ataque + dadoAcerto;
            if (dadoAcerto >= 19)
            {
                Console.WriteLine($"=== JOGADA {Nome} ===");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total: {acertoPersonagem}");
                Console.WriteLine("Voce CRITOU o ataque");
                dano = (dadoPersonagem.Next(1, 7) + Ataque) * 2;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                inimigo.Vida -= dano;
            }
            else if (acertoPersonagem > inimigo.Armadura)
            {
                Console.WriteLine($"=== JOGADA {Nome} ===");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total para acertar: {acertoPersonagem}");
                Console.WriteLine("Voce acertou o ataque");
                dano = dadoPersonagem.Next(1, 7) + Ataque;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                inimigo.Vida -= dano;
            }
            else if (acertoPersonagem < inimigo.Armadura)
            {
                Console.WriteLine($"=== JOGADA {Nome} ===");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total para acertar: {acertoPersonagem}");
                Console.WriteLine("Voce não acertou");
                Console.WriteLine("========================\n");

            }

        }

        public void UsarEspecialClerigo(Mago mago, Guerreiro guerreiro, Arqueiro arqueiro, Clerigo clerigo)
        {

            Console.WriteLine("Quem você deseja curar?");
            Console.WriteLine($"1 - Clérigo(VOCÊ): {clerigo.Vida}/{clerigo.VidaInicial}");
            Console.WriteLine($"2 - Mago: {mago.Vida}/{mago.VidaInicial}");
            Console.WriteLine($"3 - Guerreiro: {guerreiro.Vida}/{guerreiro.VidaInicial}");
            Console.WriteLine($"4 - Arqueiro: {arqueiro.Vida}/{arqueiro.VidaInicial}");

            int opcao1;
            opcao1 = Convert.ToInt32(Console.ReadLine());
            Console.Clear();
            switch (opcao1)
            {
                case 1:
                    if (clerigo.Vida < clerigo.Vida / 2)
                    {
                        clerigo.Vida += dadoPersonagem.Next(1, 7) + Ataque + 2;
                        if (clerigo.Vida > clerigo.VidaInicial)
                        {
                            clerigo.Vida = clerigo.VidaInicial;
                        }
                        Estamina--;
                        Console.WriteLine("Por hora você se afastou da morte...\n");
                    }
                    else if (clerigo.Vida > clerigo.Vida / 2)
                    {
                        clerigo.Vida += dadoPersonagem.Next(1, 7) + Ataque;
                        if (clerigo.Vida > clerigo.VidaInicial)
                        {
                            clerigo.Vida = clerigo.VidaInicial;
                        }
                        Estamina--;
                        Console.WriteLine("Você se curou...\n");
                    }
                    break;

                case 2:
                    if (mago.Vida == 0)
                    {
                        mago.Vida = mago.VidaInicial;
                        mago.Vivo = true;
                        Estamina--;
                        Console.WriteLine($"Você ressucitou o {mago.Nome}...\n");
                    }
                    else if (mago.Vida < mago.VidaInicial / 2)
                    {
                        mago.Vida += dadoPersonagem.Next(1, 7) + Ataque + 2;
                        if (mago.Vida > mago.VidaInicial)
                        {
                            mago.Vida = mago.VidaInicial;
                        }
                        Estamina--;
                        Console.WriteLine($"Por hora você afastou o {mago.Nome} da morte...\n");
                    }
                    else if (mago.Vida > mago.VidaInicial / 2)
                    {
                        mago.Vida += dadoPersonagem.Next(1, 7) + Ataque;
                        if (mago.Vida > mago.VidaInicial)
                        {
                            mago.Vida = mago.VidaInicial;
                        }
                        Estamina--;
                        Console.WriteLine($"Você curou o {mago.Nome}...\n");
                    }
                    break;

                case 3:
                    if (guerreiro.Vida == 0)
                    {
                        guerreiro.Vida = guerreiro.VidaInicial;
                        guerreiro.Vivo = true;
                        Estamina--;
                        Console.WriteLine($"Você ressucitou o {guerreiro.Nome}...\n");
                    }
                    else if (guerreiro.Vida < guerreiro.VidaInicial / 2)
                    {
                        guerreiro.Vida += dadoPersonagem.Next(1, 7) + Ataque + 2;
                        if (guerreiro.Vida > guerreiro.VidaInicial)
                        {
                            guerreiro.Vida = guerreiro.VidaInicial;
                        }
                        Estamina--;
                        Console.WriteLine($"Por hora você afastou o {guerreiro.Nome} da morte...\n");
                    }
                    else if (guerreiro.Vida > guerreiro.VidaInicial / 2)
                    {
                        guerreiro.Vida += dadoPersonagem.Next(1, 7) + Ataque;
                        if (guerreiro.Vida > guerreiro.VidaInicial)
                        {
                            guerreiro.Vida = guerreiro.VidaInicial;
                        }
                        Estamina--;
                        Console.WriteLine($"Você curou o {guerreiro.Nome}...\n");
                    }
                    break;

                case 4:
                    if (arqueiro.Vida == 0)
                    {
                        arqueiro.Vida = arqueiro.VidaInicial;
                        arqueiro.Vivo = true;
                        Estamina--;
                        Console.WriteLine($"Você ressucitou o {arqueiro.Nome}...\n");
                    }
                    else if (arqueiro.Vida < arqueiro.VidaInicial / 2)
                    {
                        arqueiro.Vida += dadoPersonagem.Next(1, 7) + Ataque + 2;
                        if (arqueiro.Vida > arqueiro.VidaInicial)
                        {
                            arqueiro.Vida = arqueiro.VidaInicial;
                        }
                        Estamina--;
                        Console.WriteLine($"Por hora você afastou o {arqueiro.Nome} da morte...\n");
                    }
                    else if (arqueiro.Vida > arqueiro.VidaInicial / 2)
                    {
                        arqueiro.Vida += dadoPersonagem.Next(1, 7) + Ataque;
                        if (arqueiro.Vida > arqueiro.VidaInicial)
                        {
                            arqueiro.Vida = arqueiro.VidaInicial;
                        }
                        Estamina--;
                        Console.WriteLine($"Você curou o {arqueiro.Nome}...\n");
                    }
                    break;
            }
        }

        public void VerificarArmadura()
        {
            if (Armadura != 18)
            {
                turnosArmadura++;

                if (turnosArmadura > 3)
                {
                    Armadura = 18;
                    turnosArmadura = 0;
                }
            }
        }
    }

    abstract class Inimigo
    {
        //Método para ROLAGEM DE DADOS  
        public static Random dadoInimigo = new Random();
        public int VidaInicial;
        public int Vida;
        public int Estamina;
        public int Ataque;
        public int Armadura;
        public bool Vivo;
        public string Nome;

        public void VerificarSeMorreu()
        {
            if (Vida <= 0)
            {
                Vivo = false;
                Console.WriteLine($"Você matou o {Nome}...");
                Console.WriteLine("Caminho para a masmorra livre...");
                Console.ReadKey();
            }
        }

        public virtual void IA_Combate(int turnos, Inimigo inimigoAtual, Guerreiro guerreiro, Mago mago, Arqueiro arqueiro, Clerigo clerigo) { }

        public virtual void Atacar(Personagem personagem) { }



        //public virtual void Drops() { }


    }

    class Blindado : Inimigo
    {
        //public List<string> Drops = new List<string> { "Espada da Corrupção", "Armadura Reforçada" };

        public Blindado()
        {
            VidaInicial = 50;
            Vida = 45;
            Estamina = 3;
            Ataque = 4;
            Armadura = 16;
            Vivo = true;
            Nome = "BLINDADO";
        }

        public override void Atacar(Personagem personagem)
        {
            int acertoInimigo;
            int dano;
            int dadoAcerto;

            dadoAcerto = dadoInimigo.Next(1, 21);
            acertoInimigo = Ataque + dadoAcerto;
            if (dadoAcerto >= 19 && Vida < VidaInicial / 2)
            {
                acertoInimigo = (2 * Ataque) + dadoAcerto;
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"====== ENFURECIDO ======");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque * 2}");
                Console.WriteLine($"Total: {acertoInimigo}");
                Console.WriteLine($"O {Nome} CRITOU o ataque");
                dano = dadoInimigo.Next(1, 9) * 2;
                dano = dano * 2;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                personagem.Vida -= dano;
                if (personagem.Vida < 0)
                {
                    personagem.Vida = 0;
                }
            }
            else if (dadoAcerto < 19 && Vida < VidaInicial / 2)
            {
                acertoInimigo = (2 * Ataque) + dadoAcerto;
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"====== ENFURECIDO ======");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque * 2}");
                Console.WriteLine($"Total: {acertoInimigo}");
                Console.WriteLine($"O {Nome} acertou o ataque");
                dano = dadoInimigo.Next(1, 9) * 2;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                personagem.Vida -= dano;
                if (personagem.Vida < 0)
                {
                    personagem.Vida = 0;
                }
            }
            else if (dadoAcerto >= 19)
            {
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total: {acertoInimigo}");
                Console.WriteLine($"O {Nome} CRITOU o ataque");
                dano = dadoInimigo.Next(1, 9) * 2;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                personagem.Vida -= dano;
                if (personagem.Vida < 0)
                {
                    personagem.Vida = 0;
                }
            }
            else if (acertoInimigo >= personagem.Armadura)
            {
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total para acertar: {acertoInimigo}");
                Console.WriteLine($"O {Nome} acertou o ataque");
                dano = dadoInimigo.Next(1, 9);
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                personagem.Vida -= dano;
                if (personagem.Vida < 0)
                {
                    personagem.Vida = 0;
                }
            }
            else if (acertoInimigo < personagem.Armadura)
            {
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total para acertar: {acertoInimigo}");
                Console.WriteLine($"O {Nome} não acertou");
                Console.WriteLine("========================\n");
            }
        }

        public override void IA_Combate(int turnos, Inimigo blindado, Guerreiro guerreiro, Mago mago, Arqueiro arqueiro, Clerigo clerigo)
        {
            if (turnos != 0)
            {
                //"FÚRIA" DO BLINDADO
                if (blindado.Vida <= blindado.VidaInicial / 2)
                {
                    if (guerreiro.Vida > 0 && arqueiro.Vida == 0)
                    {
                        blindado.Atacar(guerreiro);
                        guerreiro.VerificarSeMorreu();
                        if (guerreiro.Vivo == false)
                        {
                            guerreiro.Vida = 0;
                        }
                    }
                    else if (arqueiro.Vida > 0 && guerreiro.Vida == 0)
                    {
                        blindado.Atacar(arqueiro);
                        arqueiro.VerificarSeMorreu();
                        if (arqueiro.Vivo == false)
                        {
                            arqueiro.Vida = 0;
                        }
                    }
                    else if (guerreiro.Vida < arqueiro.Vida)
                    {
                        blindado.Atacar(guerreiro);
                        guerreiro.VerificarSeMorreu();
                        if (guerreiro.Vivo == false)
                        {
                            guerreiro.Vida = 0;
                        }
                    }
                    else if (arqueiro.Vida < guerreiro.Vida)
                    {
                        blindado.Atacar(arqueiro);
                        arqueiro.VerificarSeMorreu();
                        if (arqueiro.Vivo == false)
                        {
                            arqueiro.Vida = 0;
                        }
                    }
                    else if (guerreiro.Vida == 0 && arqueiro.Vida == 0 && mago.Vida == 0)
                    {
                        blindado.Atacar(clerigo);
                        clerigo.VerificarSeMorreu();
                        if (clerigo.Vivo == false)
                        {
                            clerigo.Vida = 0;
                        }
                    }
                    else if (guerreiro.Vida == 0 && arqueiro.Vida == 0 && clerigo.Vida == 0)
                    {
                        blindado.Atacar(mago);
                        mago.VerificarSeMorreu();
                        if (mago.Vivo == false)
                        {
                            mago.Vida = 0;
                        }
                    }
                    else if (guerreiro.Vida == 0 && arqueiro.Vida == 0 && mago.Vida < clerigo.Vida)
                    {
                        blindado.Atacar(mago);
                        mago.VerificarSeMorreu();
                        if (mago.Vivo == false)
                        {
                            mago.Vida = 0;
                        }
                    }
                    else if (guerreiro.Vida == 0 && arqueiro.Vida == 0 && mago.Vida > clerigo.Vida)
                    {
                        blindado.Atacar(clerigo);
                        clerigo.VerificarSeMorreu();
                        if (clerigo.Vivo == false)
                        {
                            clerigo.Vida = 0;
                        }
                    }
                }
                //ATAQUES NORMAIS
                else if (guerreiro.Vida > 0 && mago.Vida == 0)
                {
                    blindado.Atacar(guerreiro);
                    guerreiro.VerificarSeMorreu();
                    if (guerreiro.Vivo == false)
                    {
                        guerreiro.Vida = 0;
                    }
                }
                else if (mago.Vida > 0 && guerreiro.Vida == 0)
                {
                    blindado.Atacar(mago);
                    mago.VerificarSeMorreu();
                    if (mago.Vivo == false)
                    {
                        mago.Vida = 0;
                    }
                }
                else if (mago.Vida == 0 && guerreiro.Vida == 0 && arqueiro.Vida > 0)
                {
                    blindado.Atacar(arqueiro);
                    arqueiro.VerificarSeMorreu();
                    if (arqueiro.Vivo == false)
                    {
                        arqueiro.Vida = 0;
                    }
                }
                else if (mago.Vida == 0 && guerreiro.Vida == 0 && arqueiro.Vida == 0 && clerigo.Vida > 0)
                {
                    blindado.Atacar(clerigo);
                    clerigo.VerificarSeMorreu();
                    if (clerigo.Vivo == false)
                    {
                        clerigo.Vida = 0;
                    }
                }
                else if (mago.Vida < guerreiro.Vida && mago.Vida < arqueiro.Vida && mago.Vida < clerigo.Vida)
                {
                    blindado.Atacar(mago);
                    mago.VerificarSeMorreu();
                    if (mago.Vivo == false)
                    {
                        mago.Vida = 0;
                    }
                }
                else if (arqueiro.Vida < guerreiro.Vida && arqueiro.Vida < mago.Vida && arqueiro.Vida < clerigo.Vida)
                {
                    blindado.Atacar(arqueiro);
                    arqueiro.VerificarSeMorreu();
                    if (arqueiro.Vivo == false)
                    {
                        arqueiro.Vida = 0;
                    }
                }
                else if (clerigo.Vida < guerreiro.Vida && clerigo.Vida < mago.Vida && clerigo.Vida < arqueiro.Vida)
                {
                    blindado.Atacar(clerigo);
                    clerigo.VerificarSeMorreu();
                    if (clerigo.Vivo == false)
                    {
                        clerigo.Vida = 0;
                    }
                }
                else if (guerreiro.Vida < mago.Vida && guerreiro.Vida < mago.Vida && guerreiro.Vida < clerigo.Vida)
                {
                    blindado.Atacar(guerreiro);
                    guerreiro.VerificarSeMorreu();
                    if (guerreiro.Vivo == false)
                    {
                        guerreiro.Vida = 0;
                    }
                }
            }
        }

    }

    class Harpia : Inimigo
    {
        int contadorEspecial = 0;

        public List<string> Drops = new List<string> { "Espada da Corrupção", "Armadura Reforçada" };

        public Harpia()
        {
            VidaInicial = 60;
            Vida = 60;
            Estamina = 3;
            Ataque = 6;
            Armadura = 13;
            Vivo = true;
            Nome = "HARPIA";
        }

        public override void Atacar(Personagem personagem)
        {
            int acertoInimigo;
            int dano;
            int dadoAcerto;

            dadoAcerto = dadoInimigo.Next(1, 21);
            acertoInimigo = Ataque + dadoAcerto;

            if (dadoAcerto >= 19)
            {
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total: {acertoInimigo}");
                Console.WriteLine($"O {Nome} CRITOU o ataque");
                dano = dadoInimigo.Next(1, 7) + dadoInimigo.Next(1, 7) + Ataque;
                dano = dano * 2;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                personagem.Vida -= dano;
                if (personagem.Vida < 0)
                {
                    personagem.Vida = 0;
                }
            }
            else if (acertoInimigo >= personagem.Armadura)
            {
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total para acertar: {acertoInimigo}");
                Console.WriteLine($"O {Nome} acertou o ataque");
                dano = dadoInimigo.Next(1, 7) + dadoInimigo.Next(1, 7) + Ataque;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                personagem.Vida -= dano;
                if (personagem.Vida < 0)
                {
                    personagem.Vida = 0;
                }
            }
            else if (acertoInimigo < personagem.Armadura)
            {
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total para acertar: {acertoInimigo}");
                Console.WriteLine($"O {Nome} não acertou");
                Console.WriteLine("========================\n");
            }
        }

        public void usarEspecial(Guerreiro guerreiro, Mago mago, Arqueiro arqueiro, Clerigo clerigo)
        {
            int dano;

            dano = dadoInimigo.Next(1, 7) * 4;
            guerreiro.Vida -= dano;
            mago.Vida -= dano;
            arqueiro.Vida -= dano;
            clerigo.Vida -= dano;
            Estamina--;

            Console.WriteLine($"=== JOGADA {Nome} ===");
            Console.WriteLine($"{Nome} usou GRITO ENSURDECEDOR");
            Console.WriteLine($"Dano Total: {dano}");
            Console.WriteLine("TODOS OS PERSONAGENS FORAM AFETADOS");
            Console.WriteLine("========================\n");

            if (mago.Vida < 0)
            {
                mago.Vida = 0;
                mago.Vivo = false;
                Console.WriteLine("O MAGO MORREU...");
            }
            if (guerreiro.Vida < 0)
            {
                guerreiro.Vida = 0;
                guerreiro.Vivo = false;
                Console.WriteLine("O GUERREIRO MORREU...");
            }
            if (arqueiro.Vida < 0)
            {
                arqueiro.Vida = 0;
                arqueiro.Vivo = false;
                Console.WriteLine("O ARQUEIRO MORREU...");
            }
            if (clerigo.Vida < 0)
            {
                clerigo.Vida = 0;
                clerigo.Vivo = false;
                Console.WriteLine("O CLERIGO MORREU...");
            }

        }

        public override void IA_Combate(int turnos, Inimigo harpia, Guerreiro guerreiro, Mago mago, Arqueiro arqueiro, Clerigo clerigo)
        {
            if (turnos != 0)
            {
                //Lógica para usar ou não o especial
                if (guerreiro.Vida < guerreiro.VidaInicial)
                {
                    contadorEspecial++;
                }
                if (mago.Vida < mago.VidaInicial)
                {
                    contadorEspecial++;
                }
                if (arqueiro.Vida < arqueiro.VidaInicial)
                {
                    contadorEspecial++;
                }
                if (clerigo.Vida < clerigo.VidaInicial)
                {
                    contadorEspecial++;
                }
                if (contadorEspecial >= 2 && Estamina > 0)
                {
                    usarEspecial(guerreiro, mago, arqueiro, clerigo);
                    contadorEspecial = 0;
                }


                //Lógica para ataques normais

                else if (arqueiro.Vida > 0)
                {
                    contadorEspecial = 0;
                    harpia.Atacar(arqueiro);
                    arqueiro.VerificarSeMorreu();
                    if (arqueiro.Vivo == false)
                    {
                        arqueiro.Vida = 0;
                    }
                }
                else if (mago.Vida > 0 && arqueiro.Vida == 0)
                {
                    contadorEspecial = 0;
                    harpia.Atacar(mago);
                    mago.VerificarSeMorreu();
                    if (mago.Vivo == false)
                    {
                        mago.Vida = 0;
                    }
                }
                else if (clerigo.Vida > 0)
                {
                    contadorEspecial = 0;
                    harpia.Atacar(clerigo);
                    clerigo.VerificarSeMorreu();
                    if (clerigo.Vivo == false)
                    {
                        clerigo.Vida = 0;
                    }
                }
                else if (guerreiro.Vida > 0 && clerigo.Vida == 0)
                {
                    contadorEspecial = 0;
                    harpia.Atacar(guerreiro);
                    guerreiro.VerificarSeMorreu();
                    if (guerreiro.Vivo == false)
                    {
                        guerreiro.Vida = 0;
                    }
                }
            }
        }
    }

    class Corrompido : Inimigo
    {
        int contadorEspecial = 0;

        public Corrompido()
        {
            VidaInicial = 90;
            Vida = 85;
            Estamina = 3;
            Ataque = 5;
            Armadura = 15;
            Vivo = true;
            Nome = "CORROMPIDO";
        }

        public override void Atacar(Personagem personagem)
        {
            int acertoInimigo;
            int dano;
            int dadoAcerto;

            dadoAcerto = dadoInimigo.Next(1, 21);
            acertoInimigo = Ataque + dadoAcerto;

            if (dadoAcerto >= 19)
            {
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total: {acertoInimigo}");
                Console.WriteLine($"O {Nome} CRITOU o ataque");
                dano = (dadoInimigo.Next(1, 9) + Ataque) * 2;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                personagem.Vida -= dano;
                if (personagem.Vida < 0)
                {
                    personagem.Vida = 0;
                }
            }
            else if (acertoInimigo >= personagem.Armadura)
            {
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total para acertar: {acertoInimigo}");
                Console.WriteLine($"O {Nome} acertou o ataque");
                dano = dadoInimigo.Next(1, 9) + Ataque;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                personagem.Vida -= dano;
                if (personagem.Vida < 0)
                {
                    personagem.Vida = 0;
                }
            }
            else if (acertoInimigo < personagem.Armadura)
            {
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total para acertar: {acertoInimigo}");
                Console.WriteLine($"O {Nome} não acertou");
                Console.WriteLine("========================\n");
            }
        }

        public override void IA_Combate(int turnos, Inimigo corrompido, Guerreiro guerreiro, Mago mago, Arqueiro arqueiro, Clerigo clerigo)
        {
            if (turnos != 0)
            {
                //Lógica para usar ou não o especial
                if (guerreiro.Vida < guerreiro.VidaInicial)
                {
                    contadorEspecial++;
                }
                if (mago.Vida < mago.VidaInicial)
                {
                    contadorEspecial++;
                }
                if (arqueiro.Vida < arqueiro.VidaInicial)
                {
                    contadorEspecial++;
                }
                if (clerigo.Vida < clerigo.VidaInicial)
                {
                    contadorEspecial++;
                }
                if (contadorEspecial >= 2 && Estamina > 0 && corrompido.Vida < corrompido.VidaInicial / 2)
                {
                    usarEspecial(guerreiro, mago, arqueiro, clerigo);
                    contadorEspecial = 0;
                }
                else if (corrompido.Vida < corrompido.VidaInicial / 2)
                {
                    usarEspecial(guerreiro, mago, arqueiro, clerigo);
                    contadorEspecial = 0;
                }


                //Lógica para ataques normais

                else if (clerigo.Vida > 0)
                {
                    contadorEspecial = 0;
                    corrompido.Atacar(clerigo);
                    clerigo.VerificarSeMorreu();
                    if (clerigo.Vivo == false)
                    {
                        clerigo.Vida = 0;
                    }
                }
                else if (mago.Vida > 0 && clerigo.Vida == 0)
                {
                    contadorEspecial = 0;
                    corrompido.Atacar(mago);
                    mago.VerificarSeMorreu();
                    if (mago.Vivo == false)
                    {
                        mago.Vida = 0;
                    }
                }
                else if (arqueiro.Vida > 0)
                {
                    contadorEspecial = 0;
                    corrompido.Atacar(arqueiro);
                    arqueiro.VerificarSeMorreu();
                    if (arqueiro.Vivo == false)
                    {
                        arqueiro.Vida = 0;
                    }
                }
                else if (guerreiro.Vida > 0 && arqueiro.Vida == 0)
                {
                    contadorEspecial = 0;
                    corrompido.Atacar(guerreiro);
                    guerreiro.VerificarSeMorreu();
                    if (guerreiro.Vivo == false)
                    {
                        guerreiro.Vida = 0;
                    }
                }
            }
        }

        public void usarEspecial(Guerreiro guerreiro, Mago mago, Arqueiro arqueiro, Clerigo clerigo)
        {
            int dano;

            dano = dadoInimigo.Next(1, 5) * 6;
            guerreiro.Vida -= dano;
            mago.Vida -= dano;
            arqueiro.Vida -= dano;
            clerigo.Vida -= dano;
            Estamina--;
            Vida += dano * 2;
            if (Vida > VidaInicial)
            {
                Vida = VidaInicial;
            }

            Console.WriteLine($"=== JOGADA {Nome} ===");
            Console.WriteLine($"{Nome} usou ABSORVER ENERGIA VITAL");
            Console.WriteLine($"Dano Total: {dano}");
            Console.WriteLine("TODOS OS PERSONAGENS FORAM AFETADOS");
            Console.WriteLine($"O {Nome} se curou {dano * 2}");
            Console.WriteLine("========================\n");


            if (mago.Vida < 0)
            {
                mago.Vida = 0;
                mago.Vivo = false;
                Console.WriteLine("O MAGO MORREU...");
            }
            if (guerreiro.Vida < 0)
            {
                guerreiro.Vida = 0;
                guerreiro.Vivo = false;
                Console.WriteLine("O GUERREIRO MORREU...");
            }
            if (arqueiro.Vida < 0)
            {
                arqueiro.Vida = 0;
                arqueiro.Vivo = false;
                Console.WriteLine("O ARQUEIRO MORREU...");
            }
            if (clerigo.Vida < 0)
            {
                clerigo.Vida = 0;
                clerigo.Vivo = false;
                Console.WriteLine("O CLERIGO MORREU...");
            }

        }
    }

    class Supremo : Inimigo
    {
        int contadorEspecial = 0;

        public Supremo()
        {
            VidaInicial = 200;
            Vida = 200;
            Estamina = 6;
            Ataque = 8;
            Armadura = 15;
            Vivo = true;
            Nome = "CORROMPIDO";
        }

        public override void Atacar(Personagem personagem)
        {
            int acertoInimigo;
            int dano;
            int dadoAcerto;

            dadoAcerto = dadoInimigo.Next(1, 21);
            acertoInimigo = Ataque + dadoAcerto;
            if (dadoAcerto >= 19 && Vida < VidaInicial / 2)
            {
                acertoInimigo = (2 * Ataque) + dadoAcerto;
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"====== ENFURECIDO ======");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque * 2}");
                Console.WriteLine($"Total: {acertoInimigo}");
                Console.WriteLine($"O {Nome} CRITOU o ataque");
                dano = (dadoInimigo.Next(1, 11) + dadoInimigo.Next(1, 11)) * 2;
                dano = dano * 2;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                personagem.Vida -= dano;
                if (personagem.Vida < 0)
                {
                    personagem.Vida = 0;
                }
            }
            else if (dadoAcerto < 19 && Vida < VidaInicial / 2)
            {
                acertoInimigo = (2 * Ataque) + dadoAcerto;
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"====== ENFURECIDO ======");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque * 2}");
                Console.WriteLine($"Total: {acertoInimigo}");
                Console.WriteLine($"O {Nome} acertou o ataque");
                dano = (dadoInimigo.Next(1, 11) + dadoInimigo.Next(1, 11)) * 2;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                personagem.Vida -= dano;
                if (personagem.Vida < 0)
                {
                    personagem.Vida = 0;
                }
            }
            else if (dadoAcerto >= 19)
            {
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total: {acertoInimigo}");
                Console.WriteLine($"O {Nome} CRITOU o ataque");
                dano = (dadoInimigo.Next(1, 11) + dadoInimigo.Next(1, 11)) * 2;
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                personagem.Vida -= dano;
                if (personagem.Vida < 0)
                {
                    personagem.Vida = 0;
                }
            }
            else if (acertoInimigo >= personagem.Armadura)
            {
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total para acertar: {acertoInimigo}");
                Console.WriteLine($"O {Nome} acertou o ataque");
                dano = dadoInimigo.Next(1, 11) + dadoInimigo.Next(1, 11);
                Console.WriteLine($"Dano total: {dano}");
                Console.WriteLine("========================\n");
                personagem.Vida -= dano;
                if (personagem.Vida < 0)
                {
                    personagem.Vida = 0;
                }
            }
            else if (acertoInimigo < personagem.Armadura)
            {
                Console.WriteLine($"==== JOGADA {Nome} ====");
                Console.WriteLine($"O {Nome} atacou o {personagem.Nome}");
                Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                Console.WriteLine($"Total para acertar: {acertoInimigo}");
                Console.WriteLine($"O {Nome} não acertou");
                Console.WriteLine("========================\n");
            }
        }

        public void usarEspecial(Guerreiro guerreiro, Mago mago, Arqueiro arqueiro, Clerigo clerigo)
        {
            int dano;

            dano = dadoInimigo.Next(1, 7) + dadoInimigo.Next(1, 7) + dadoInimigo.Next(1, 7) + dadoInimigo.Next(1, 7) + dadoInimigo.Next(1, 7) + dadoInimigo.Next(1, 7);
            guerreiro.Vida -= dano;
            mago.Vida -= dano;
            arqueiro.Vida -= dano;
            clerigo.Vida -= dano;
            Estamina--;
            Vida += dano * 2;
            if (Vida > VidaInicial)
            {
                Vida = VidaInicial;
            }

            Console.WriteLine($"=== JOGADA {Nome} ===");
            Console.WriteLine($"{Nome} usou QUEIMAR ALMAS");
            Console.WriteLine($"Dano Total: {dano}");
            Console.WriteLine("TODOS OS PERSONAGENS FORAM AFETADOS");
            Console.WriteLine($"O {Nome} se curou {dano * 2}");
            Console.WriteLine("========================\n");


            if (mago.Vida < 0)
            {
                mago.Vida = 0;
                mago.Vivo = false;
                Console.WriteLine("O MAGO MORREU...");
            }
            if (guerreiro.Vida < 0)
            {
                guerreiro.Vida = 0;
                guerreiro.Vivo = false;
                Console.WriteLine("O GUERREIRO MORREU...");
            }
            if (arqueiro.Vida < 0)
            {
                arqueiro.Vida = 0;
                arqueiro.Vivo = false;
                Console.WriteLine("O ARQUEIRO MORREU...");
            }
            if (clerigo.Vida < 0)
            {
                clerigo.Vida = 0;
                clerigo.Vivo = false;
                Console.WriteLine("O CLERIGO MORREU...");
            }

        }

        public override void IA_Combate(int turnos, Inimigo corrompido, Guerreiro guerreiro, Mago mago, Arqueiro arqueiro, Clerigo clerigo)
        {
            if (turnos != 0)
            {
                //Lógica para usar ou não o especial
                if (guerreiro.Vida < guerreiro.VidaInicial)
                {
                    contadorEspecial++;
                }
                if (mago.Vida < mago.VidaInicial)
                {
                    contadorEspecial++;
                }
                if (arqueiro.Vida < arqueiro.VidaInicial)
                {
                    contadorEspecial++;
                }
                if (clerigo.Vida < clerigo.VidaInicial)
                {
                    contadorEspecial++;
                }
                if (contadorEspecial >= 2 && Estamina > 0 && corrompido.Vida < corrompido.VidaInicial / 2)
                {
                    usarEspecial(guerreiro, mago, arqueiro, clerigo);
                    contadorEspecial = 0;
                }


                //Lógica para ataques normais

                else if (clerigo.Vida > 0)
                {
                    contadorEspecial = 0;
                    corrompido.Atacar(clerigo);
                    clerigo.VerificarSeMorreu();
                    if (clerigo.Vivo == false)
                    {
                        clerigo.Vida = 0;
                    }
                }
                else if (mago.Vida > 0 && clerigo.Vida == 0)
                {
                    contadorEspecial = 0;
                    corrompido.Atacar(mago);
                    mago.VerificarSeMorreu();
                    if (mago.Vivo == false)
                    {
                        mago.Vida = 0;
                    }
                }
                else if (arqueiro.Vida > 0)
                {
                    contadorEspecial = 0;
                    corrompido.Atacar(arqueiro);
                    arqueiro.VerificarSeMorreu();
                    if (arqueiro.Vivo == false)
                    {
                        arqueiro.Vida = 0;
                    }
                }
                else if (guerreiro.Vida > 0 && arqueiro.Vida == 0)
                {
                    contadorEspecial = 0;
                    corrompido.Atacar(guerreiro);
                    guerreiro.VerificarSeMorreu();
                    if (guerreiro.Vivo == false)
                    {
                        guerreiro.Vida = 0;
                    }
                }
            }
        }

    }

}
