        public override void UsarEspecial(Inimigo inimigo)
        {
            Estamina--;

            int acertoPersonagem;
            int dano;
            int dadoAcerto;

            dadoAcerto = dadoPersonagem.Next(1, 21);
            acertoPersonagem = Ataque + dadoAcerto;
            if (Nivel == 4)
            {
                if (dadoAcerto >= 19)
                {
                    Console.WriteLine("=== JOGADA MAGO ===");
                    Console.WriteLine("Voce CRITOU o ataque");
                    dano = (dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9)) * 2;
                    Console.WriteLine($"Dano total: {dano}");
                    Console.WriteLine("========================\n");
                    inimigo.Vida -= dano;
                }
                else if (acertoPersonagem < 19)
                {
                    Console.WriteLine("=== JOGADA MAGO ===");
                    Console.WriteLine("Voce acertou o ataque");
                    dano = dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9);
                    Console.WriteLine($"Dano total: {dano}");
                    Console.WriteLine("========================\n");
                    inimigo.Vida -= dano;
                }
            }
            else if (Nivel == 3)
            {
                if (dadoAcerto >= 19)
                {
                    Console.WriteLine("=== JOGADA MAGO ===");
                    Console.WriteLine("Voce CRITOU o ataque");
                    dano = (dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9)) * 2;
                    Console.WriteLine($"Dano total: {dano}");
                    Console.WriteLine("========================\n");
                    inimigo.Vida -= dano;
                }
                else if (acertoPersonagem < 19)
                {
                    Console.WriteLine("=== JOGADA MAGO ===");
                    Console.WriteLine("Voce acertou o ataque");
                    dano = dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9);
                    Console.WriteLine($"Dano total: {dano}");
                    Console.WriteLine("========================\n");
                    inimigo.Vida -= dano;
                }
            }
            else if (Nivel == 2)
            {
                if (dadoAcerto >= 19)
                {
                    Console.WriteLine("=== JOGADA MAGO ===");
                    Console.WriteLine("Voce CRITOU o ataque");
                    dano = (dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9)) * 2;
                    Console.WriteLine($"Dano total: {dano}");
                    Console.WriteLine("========================\n");
