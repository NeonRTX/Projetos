                        jogadorAtual = clerigo;
                        clerigo.VerificarArmadura();
                        i++;
                        i++;
                        i++;
                    }
                    else if (guerreiro.Vida > 0)
                    {
                        jogadorAtual = guerreiro;
                        guerreiro.VerificarEspecial();
                        guerreiro.VerificarArmadura();
                    }
                    else if (clerigo.Vida == 0 && guerreiro.Vida == 0 && mago.Vida == 0 && arqueiro.Vida == 0)
