                for (int i = 0; i < 4; i++)
                {
                    if (i == 0 && mago.Vida > 0)
                    {
                        jogadorAtual = mago;
                        mago.VerificarArmadura();
                    }
                    else if (i == 1 && guerreiro.Vida > 0)
                    {
                        jogadorAtual = guerreiro;
