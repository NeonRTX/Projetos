                        Console.WriteLine($"--{blindado.Nome}--");
                        Console.WriteLine($"Vida Atual: {blindado.Vida}/{blindado.VidaInicial}");
                        Console.WriteLine($"Armadura Atual: {blindado.Armadura}\n");
                        Console.WriteLine($"--{jogadorAtual.Nome}--");
