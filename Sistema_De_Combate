
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Sistema_De_Combate
{
    class Program
    {
        static void Main(string[] args)
        {
            //Instâncias dos Personagens
            Guerreiro guerreiro = new Guerreiro();
            Mago mago = new Mago();
            Arqueiro arqueiro = new Arqueiro();
            Clerigo clerigo = new Clerigo();           
            Personagem jogadorAtual = null;

            //Instâncias dos Inimigos
            Blindado blindado = new Blindado();
            Harpia harpia = new Harpia();
            Corrompido corrompido = new Corrompido();
            Supremo supremo = new Supremo();
            Inimigo inimigoAtual = null;

            int turnos = 0;

            //Primeiro encontro BLINDADO
            Inicio(blindado);
            inimigoAtual = blindado;
            Combate(turnos, inimigoAtual, guerreiro, mago, arqueiro, clerigo, jogadorAtual);
            //Caso todos os personagens morram
            if (mago.Vivo == false && guerreiro.Vivo == false && arqueiro.Vivo == false && clerigo.Vivo == false)
            {
                Console.WriteLine("TODOS OS JOGADORES MORRERAM");
                Console.ReadKey();
                return;
            }
            //Segundo encontro HARPIA
            SegundoEncontro(harpia);
            inimigoAtual = harpia;
            Combate(turnos, inimigoAtual, guerreiro, mago, arqueiro, clerigo, jogadorAtual);
            //Caso todos os personagens morram
            if (mago.Vivo == false && guerreiro.Vivo == false && arqueiro.Vivo == false && clerigo.Vivo == false)
            {
                Console.WriteLine("TODOS OS JOGADORES MORRERAM");
                Console.ReadKey();
                return;
            }
            //Terceiro encontro
            TerceiroEncontro(corrompido);
            inimigoAtual = corrompido;
            Combate(turnos, inimigoAtual, guerreiro, mago, arqueiro, clerigo, jogadorAtual);
            //Caso todos os personagens morram
            if (mago.Vivo == false && guerreiro.Vivo == false && arqueiro.Vivo == false && clerigo.Vivo == false)
            {
                Console.WriteLine("TODOS OS JOGADORES MORRERAM");
                Console.ReadKey();
                return;
            }
            //Último encontro
            UltimoEncontro(supremo);
            inimigoAtual = supremo;
            Combate(turnos, inimigoAtual, guerreiro, mago, arqueiro, clerigo, jogadorAtual);
            //Caso todos os personagens morram
            if (mago.Vivo == false && guerreiro.Vivo == false && arqueiro.Vivo == false && clerigo.Vivo == false)
            {
                Console.WriteLine("TODOS OS JOGADORES MORRERAM");
                Console.ReadKey();
                return;
            }
        }
        public static void Inicio(Blindado blindado)
        {
            Console.WriteLine("\nSua PARTY foi mandada numa missão para investigar a MASMORRA SANGRENTA...");
            Console.WriteLine("Um Guerreiro...");
            Console.WriteLine("Um Mago...");
            Console.WriteLine("Um Arqueiro...");
            Console.WriteLine("Um Clérigo...\n");
            Console.WriteLine("Aperte qualquer tecla para continuar...");
            Console.ReadKey();
            Console.Clear();
            Console.WriteLine("\nAdentrando a masmorra vocês se deparam com seu primeiro inimigo...");
            Console.WriteLine($"Um grande {blindado.Nome} está a frente de vocês...");
            Console.WriteLine($"Ele é um guarda alto e forte e com uma armadura quase impenetrável...");
            Console.WriteLine("E agora vocês precisa tomar uma decisão...\n");
            Console.WriteLine("Aperte qualquer tecla para continuar...");
            Console.ReadKey();
            Console.Clear();
        }

        public static void SegundoEncontro(Harpia harpia)
        {
            Console.Clear();
            Console.WriteLine("\nSua PARTY resistiu ao primeiro encontro...");
            Console.WriteLine("Vocês adentram mais a fundo da MASMORRA SANGRENTA");
            Console.WriteLine("Um ambiente úmido e desagradável...");
            Console.WriteLine("O cheiro de sangue e mofo adentra o nariz de todos...");
            Console.WriteLine("Mas vocês tem uma missão a cumprir...\n");
            Console.WriteLine("\nAperte qualquer tecla para continuar...");
            Console.ReadKey();
            Console.Clear();
            Console.WriteLine("\nAo fazer uma curva vocês veem um grande salão...");
            Console.WriteLine("Correntes e ossos espalhados enfeitam o lugar...");
            Console.WriteLine("Então vocês escutam um bater de asas...");
            Console.WriteLine($"ao olhar para cima voces veem uma grande {harpia.Nome}...");
            Console.WriteLine("Ela sobrevoa vocês num razante e então para a frente de vocês...");
            Console.WriteLine("Ela parece ser mais forte que o BLINDADO...");
            Console.WriteLine("Mas vocês não entraram aqui para fugir...");
            Console.WriteLine("\nAperte qualquer tecla para continuar...");
            Console.ReadKey();
            Console.Clear();
        }

        public static void TerceiroEncontro(Corrompido corrompido)
        {
            Console.Clear();
            Console.WriteLine("\nSua PARTY venceu o segundo encontro...");
            Console.WriteLine("Porém por quanto tempo vai durar a sorte de vocês?...");
            Console.WriteLine("Passando pela câmara da HARPIA vocês se surpreendem com o que encontram...");
            Console.WriteLine("Uma pequena biblioteca...");
            Console.WriteLine("Um pouco sujo e quebrada...");
            Console.WriteLine("Porém muito organizada...");
            Console.WriteLine("Receosos com o que poderiam encontrar vocês permanecem em alerta...");
            Console.ReadKey();
            Console.Clear();
            Console.WriteLine("\nSons de passos lentos começam a ecoar pelo salão...");
            Console.WriteLine("Lentamente sai de trás de uma das estantes...");
            Console.WriteLine("O que parece ser um clérigo...");
            Console.WriteLine("Porém ao olhar o seu rosto tods se apavoram...");
            Console.WriteLine("Ele tem pele podre e com pedaços arrancados...");
            Console.WriteLine("Mas o que mais chama a atenção é a falta da sua mandibula...");
            Console.WriteLine("Ele segura uma MAÇA em uma das mãos...");
            Console.WriteLine("Emite um gemido aterrorizante...");
            Console.WriteLine($"E então o {corrompido.Nome} parte para cima de vocês...");
            Console.WriteLine("Ela parece ser mais forte que a HARPIA...");
            Console.WriteLine("Mas ninguém aqui quer fugir... né?....");
            Console.WriteLine("\nAperte qualquer tecla para continuar...");
            Console.ReadKey();
            Console.Clear();
        }

        public static void UltimoEncontro(Supremo supremo)
        {
            Console.Clear();
            Console.WriteLine("\nVocês sobreviveram ao terceiro encontro...");
            Console.WriteLine("Parabéns...");
            Console.ReadKey();
            Console.WriteLine("Vocês então chegam ao final da masmorra...");
            Console.WriteLine("Um grande salão real espera vocês...");
            Console.WriteLine("Um longo tapete vermelho está estendido...");
            Console.WriteLine("Vocês adentram com mais cutela que antes...");
            Console.WriteLine("No topo de uma pequena escadaria está um trono...");
            Console.WriteLine("Em cima desse trono há uma figura misteriosa...");
            Console.ReadKey();
            Console.Clear();
            Console.WriteLine("\nUm ser está parado apenas observando vocês com um olhar de curiosidade...");
            Console.WriteLine("Ele então se levanta e anuncia...");
            Console.WriteLine("NINGUEM CHEGOU TÃO LONGE NA MINHA MASMORRA...");
            Console.WriteLine("ME PROVEM SE VOCÊS TEM VALOR...");
            Console.WriteLine("OU SE APENAS TIVERAM SORTE...");
            Console.ReadKey();
            Console.WriteLine("Um calafrio passa pelo corpo de todos vocês...");
            Console.WriteLine("Vocês não deveriam estar aqui...");
            Console.WriteLine("Mas agora não tem como voltar...");
            Console.WriteLine($"Afinal o {supremo.Nome} esta a frente de vocês...");
            Console.WriteLine("E fugir significa morrer...");
            Console.WriteLine("\nAperte qualquer tecla para continuar...");
            Console.ReadKey();
            Console.Clear();
        }

        public static void Combate(int turnos, Inimigo inimigoAtual, Guerreiro guerreiro, Mago mago, Arqueiro arqueiro, Clerigo clerigo, Personagem jogadorAtual)
        {
            turnos = 0;
            while (inimigoAtual.Vivo == true)
            {
                if (mago.Vida == 0 && guerreiro.Vida == 0 && arqueiro.Vida == 0 && clerigo.Vida == 0)
                {

                    break;
                }
                inimigoAtual.IA_Combate(turnos, inimigoAtual, guerreiro, mago, arqueiro, clerigo);
                turnos++;

                for (int i = 0; i < 4; i++)
                {
                    if (i == 0 && mago.Vida > 0)
                    {
                        jogadorAtual = mago;
                        mago.VerificarArmadura();
                    }
                    else if (i == 1 && guerreiro.Vida > 0)
                    {
                        jogadorAtual = guerreiro;
                        guerreiro.VerificarEspecial();
                        guerreiro.VerificarArmadura();
                    }
                    else if (i == 2 && arqueiro.Vida > 0)
                    {
                        jogadorAtual = arqueiro;
                        arqueiro.VerificarEspecial();
                        arqueiro.VerificarArmadura();
                    }
                    else if (i == 3 && clerigo.Vida > 0)
                    {
                        jogadorAtual = clerigo;
                        clerigo.VerificarArmadura();
                    }
                    else if (guerreiro.Vida > 0 && mago.Vida == 0 && arqueiro.Vida == 0 && clerigo.Vida == 0)
                    {
                        jogadorAtual = guerreiro;
                        guerreiro.VerificarEspecial();
                        guerreiro.VerificarArmadura();
                        i++;
                        i++;
                        i++;
                    }
                    else if (guerreiro.Vida > 0 && mago.Vida == 0 && arqueiro.Vida == 0)
                    {
                        jogadorAtual = guerreiro;
                        guerreiro.VerificarEspecial();
                        guerreiro.VerificarArmadura();
                        i++;
                        i++;
                    }
                    else if (guerreiro.Vida > 0 && mago.Vida == 0)
                    {
                        jogadorAtual = guerreiro;
                        guerreiro.VerificarEspecial();
                        guerreiro.VerificarArmadura();
                        i++;
                    }
                    else if (arqueiro.Vida > 0 && guerreiro.Vida == 0 && mago.Vida == 0 && clerigo.Vida == 0)
                    {
                        jogadorAtual = arqueiro;
                        arqueiro.VerificarEspecial();
                        arqueiro.VerificarArmadura();
                        i++;
                        i++;
                        i++;
                    }
                    else if (arqueiro.Vida > 0 && guerreiro.Vida == 0 && mago.Vida == 0)
                    {
                        jogadorAtual = arqueiro;
                        arqueiro.VerificarEspecial();
                        arqueiro.VerificarArmadura();
                        i++;
                        i++;
                    }
                    else if (clerigo.Vida > 0 && guerreiro.Vida == 0 && mago.Vida == 0 && arqueiro.Vida == 0)
                    {
                        jogadorAtual = clerigo;
                        clerigo.VerificarArmadura();
                        i++;
                        i++;
                        i++;
                    }
                    else if (guerreiro.Vida > 0)
                    {
                        jogadorAtual = guerreiro;
                        guerreiro.VerificarEspecial();
                        guerreiro.VerificarArmadura();
                    }
                    if (clerigo.Vivo == false && guerreiro.Vivo == false && mago.Vivo == false && arqueiro.Vivo == false)
                    {
                        break;
                    }


                    /*if(jogadorAtual is Guerreiro)
                    {
                        jogadorAtual.VerificarEspecial();
                    }

                    jogadorAtual.VerificarArmadura();*/
                    bool teste = true;

                    while (teste)
                    {
                        if (mago.Vivo == false)
                        {
                            Console.WriteLine("O MAGO ESTÁ MORTO...");
                        }
                        if (guerreiro.Vivo == false)
                        {
                            Console.WriteLine("O GUERREIRO ESTÁ MORTO...");
                        }
                        if (arqueiro.Vivo == false)
                        {
                            Console.WriteLine("O ARQUEIRO ESTÁ MORTO...");
                        }
                        if (clerigo.Vivo == false)
                        {
                            Console.WriteLine("O CLÉRIGO ESTÁ MORTO...");
                        }
                        Console.WriteLine($"{turnos}° TURNO\n");
                        Console.WriteLine($"--{inimigoAtual.Nome}--");
                        Console.WriteLine($"Vida Atual: {inimigoAtual.Vida}/{inimigoAtual.VidaInicial}");
                        Console.WriteLine($"Armadura Atual: {inimigoAtual.Armadura}\n");
                        Console.WriteLine($"--{jogadorAtual.Nome}--");
                        Console.WriteLine($"--NV {jogadorAtual.Nivel}--");
                        Console.WriteLine($"Vida Atual: {jogadorAtual.Vida}/{jogadorAtual.VidaInicial}");
                        Console.WriteLine($"Armadura Atual: {jogadorAtual.Armadura}");
                        Console.WriteLine($"Estamina Atual: {jogadorAtual.Estamina}\n");
                        if (jogadorAtual == guerreiro)
                        {
                            if (guerreiro.Especial == true)
                            {
                                Console.WriteLine("ESPECIAL ATIVO");
                                Console.WriteLine($"--{guerreiro.turnosEspecial}° TURNO--\n");
                            }                          
                        }
                        if (jogadorAtual == arqueiro)
                        {
                            if (arqueiro.Especial == true)
                            {
                                Console.WriteLine("ESPECIAL ATIVO");
                                Console.WriteLine($"--{arqueiro.turnosEspecial}° TURNO--\n");
                            }
                        }
                        Console.WriteLine("Escolha a ação que deseja tomar...");
                        Console.WriteLine("1 - Atacar");
                        Console.WriteLine("2 - Defender");
                        Console.WriteLine("3 - Usar Especial");

                        string opcao = Console.ReadLine();
                        Console.Clear();

                        switch (opcao)
                        {
                            case "1":
                                jogadorAtual.Atacar(inimigoAtual);
                                teste = false;
                                break;
                            case "2":
                                jogadorAtual.Defender();
                                teste = false;

                                break;
                            case "3":
                                if (jogadorAtual.Estamina == 0)
                                {
                                    Console.WriteLine("Você não possui mais estamina...");
                                    break;
                                }
                                if (jogadorAtual == clerigo)
                                {
                                    clerigo.UsarEspecialClerigo(mago, guerreiro, arqueiro, clerigo);
                                }
                                jogadorAtual.UsarEspecial(inimigoAtual);
                                teste = false;

                                break;
                        }
                    }
                    inimigoAtual.VerificarSeMorreu();
                    if (inimigoAtual.Vivo == false)
                    {
                        Console.Clear();
                        
                        if (mago.Vida == 0)
                        {
                            Console.WriteLine("O clérigo curou o mago");
                            mago.Vida += 5;
                            mago.Vivo = true;

                        }
                        if (arqueiro.Vida == 0)
                        {
                            Console.WriteLine("O clérigo curou o arqueiro");
                            arqueiro.Vida += 5;
                            arqueiro.Vivo = true;

                        }
                        if (guerreiro.Vida == 0)
                        {
                            Console.WriteLine("O clérigo curou o guerreiro");
                            guerreiro.Vida += 5;
                            guerreiro.Vivo = true;

                        }

                        mago.Vida += mago.VidaInicial;
                        mago.VidaInicial += mago.VidaInicial;
                        mago.Estamina = 3;
                        mago.Ataque++;
                        mago.Nivel++;
                        guerreiro.Vida += guerreiro.VidaInicial;
                        guerreiro.VidaInicial += guerreiro.VidaInicial;
                        guerreiro.Estamina = 3;
                        guerreiro.Ataque++;
                        guerreiro.Nivel++;
                        arqueiro.Vida += arqueiro.VidaInicial;
                        arqueiro.VidaInicial += arqueiro.VidaInicial;
                        arqueiro.Estamina = 3;
                        arqueiro.Ataque++;
                        arqueiro.Nivel++;
                        clerigo.Vida += clerigo.VidaInicial;
                        clerigo.VidaInicial += clerigo.VidaInicial;
                        clerigo.Estamina = 3;
                        clerigo.Ataque++;
                        clerigo.Nivel++;
                        turnos = 0;
                        Console.WriteLine("Sua PARTY upou de level...");
                        Console.WriteLine("Todos tiveram seus ataques ou habilidades melhoradas...");
                        Console.WriteLine("Todos tiveram a sua vida aumentada...");
                        Console.WriteLine("Todos tiveram sua ESTAMINA restaurada...");
                        Console.WriteLine("Aperte qualquer tecla para continuar...");
                        Console.ReadKey();

                        break;
                    }
                    if (mago.Vida == 0 && guerreiro.Vida == 0 && arqueiro.Vida == 0 && clerigo.Vida == 0)
                    {
                        break;
                    }
                }

            }
        }
    }

    abstract class Personagem
    {
        public string Nome;
        public int VidaInicial;
        public int Vida;
        public int Estamina;
        public int Ataque;
        public int ArmaduraBase;
        public int Armadura;
        public bool Vivo;
        public int Nivel;

        //Método para ROLAGEM DE DADOS
        public static Random dadoPersonagem = new Random();

        public virtual void UsarEspecial(Inimigo inimigo) { }

        public abstract void Atacar(Inimigo inimigo);

        public virtual void Defender()
        {
            Armadura += 5;
        }

        public void VerificarSeMorreu()
        {
            if (Vida <= 0)
            {
                Vivo = false;
                Console.WriteLine($"O {Nome} morreu...");
                Console.ReadKey();
                Console.Clear();
            }
        }
    }
  
    class Guerreiro : Personagem
    {
        int turnosArmadura = 0;
        public int turnosEspecial = 0;
        public bool Especial = false;

        public Guerreiro()
        {
            VidaInicial = 12;
            Vida = 12;
            Estamina = 3;
            Ataque = 4;
            ArmaduraBase = 18;
            Armadura = 18;
            Nome = "GUERREIRO";
            Vivo = true;
            Nivel = 1;
            

        }

        public override void Atacar(Inimigo inimigo)
        {
            int acertoPersonagem;
            int dano;
            int danoE;
            int dadoAcerto;

            dadoAcerto = dadoPersonagem.Next(1, 21);
            acertoPersonagem = Ataque + dadoAcerto;
            if (Nivel == 4)
            {
                if (dadoAcerto >= 19 && Especial == false)
                {
                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total: {acertoPersonagem}");
                    Console.WriteLine("Voce CRITOU o ataque");
                    dano = (dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + (Ataque * 2)) * 2;
                    Console.WriteLine($"Dano total: {dano}");
                    Console.WriteLine("========================\n");
                    inimigo.Vida -= dano;
                    if (inimigo.Vida < 0)
                    {
                        inimigo.Vida = 0;
                    }
                }
                else if (acertoPersonagem > inimigo.Armadura && Especial == false)
                {
                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total para acertar: {acertoPersonagem}");
                    Console.WriteLine("Voce acertou o ataque");
                    dano = dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + (Ataque * 2);
                    Console.WriteLine($"Dano total: {dano}");
                    Console.WriteLine("========================\n");
                    inimigo.Vida -= dano;
                    if (inimigo.Vida < 0)
                    {
                        inimigo.Vida = 0;
                    }
                }
                else if (acertoPersonagem < inimigo.Armadura && Especial == false)
                {

                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total para acertar: {acertoPersonagem}");
                    Console.WriteLine("Voce não acertou");
                    Console.WriteLine("========================\n");

                }
                else if (acertoPersonagem < inimigo.Armadura && Especial == true)
                {

                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total para acertar: {acertoPersonagem}");
                    Console.WriteLine("Voce não acertou");
                    Console.WriteLine("========================\n");

                }
                else if (dadoAcerto >= 19 && Especial == true)
                {
                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total: {acertoPersonagem}");
                    Console.WriteLine("Voce CRITOU o ataque");
                    dano = (dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + (Ataque * 2)) * 2;
                    danoE = dano;
                    Console.WriteLine($"Dano total: {dano} + {danoE}");
                    Console.WriteLine("========================\n");
                    inimigo.Vida -= dano + danoE;
                    if (inimigo.Vida < 0)
                    {
                        inimigo.Vida = 0;
                    }
                }
                else if (acertoPersonagem > inimigo.Armadura && Especial == true)
                {
                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total para acertar: {acertoPersonagem}");
                    Console.WriteLine("Voce acertou o ataque");
                    dano = dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + (Ataque * 2);
                    danoE = dano;
                    Console.WriteLine($"Dano total: {dano} + {danoE}");
                    Console.WriteLine("========================\n");
                    inimigo.Vida -= dano + danoE;
                    if (inimigo.Vida < 0)
                    {
                        inimigo.Vida = 0;
                    }
                }
            }
            else if (Nivel == 3)
            {
                if (dadoAcerto >= 19 && Especial == false)
                {
                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total: {acertoPersonagem}");
                    Console.WriteLine("Voce CRITOU o ataque");
                    dano = (dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + Ataque) * 2;
                    Console.WriteLine($"Dano total: {dano}");
                    Console.WriteLine("========================\n");
                    inimigo.Vida -= dano;
                    if (inimigo.Vida < 0)
                    {
                        inimigo.Vida = 0;
                    }
                }
                else if (acertoPersonagem > inimigo.Armadura && Especial == false)
                {
                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total para acertar: {acertoPersonagem}");
                    Console.WriteLine("Voce acertou o ataque");
                    dano = dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + Ataque;
                    Console.WriteLine($"Dano total: {dano}");
                    Console.WriteLine("========================\n");
                    inimigo.Vida -= dano;
                    if (inimigo.Vida < 0)
                    {
                        inimigo.Vida = 0;
                    }
                }
                else if (acertoPersonagem < inimigo.Armadura && Especial == false)
                {

                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total para acertar: {acertoPersonagem}");
                    Console.WriteLine("Voce não acertou");
                    Console.WriteLine("========================\n");

                }
                else if (acertoPersonagem < inimigo.Armadura && Especial == true)
                {

                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine("=== ESPECIAL ATIVADO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total para acertar: {acertoPersonagem}");
                    Console.WriteLine("Voce não acertou");
                    Console.WriteLine("========================\n");

                }
                else if (dadoAcerto >= 19 && Especial == true)
                {
                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine("=== ESPECIAL ATIVADO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total: {acertoPersonagem}");
                    Console.WriteLine("Voce CRITOU o ataque");
                    dano = (dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + Ataque) * 2;
                    danoE = dano;
                    Console.WriteLine($"Dano total: {dano} + {danoE}");
                    Console.WriteLine("========================\n");
                    inimigo.Vida -= dano + danoE;
                    if (inimigo.Vida < 0)
                    {
                        inimigo.Vida = 0;
                    }
                }
                else if (acertoPersonagem > inimigo.Armadura && Especial == true)
                {
                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine("=== ESPECIAL ATIVADO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total para acertar: {acertoPersonagem}");
                    Console.WriteLine("Voce acertou o ataque");
                    dano = dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + Ataque;
                    danoE = dano;
                    Console.WriteLine($"Dano total: {dano} + {danoE}");
                    Console.WriteLine("========================\n");
                    inimigo.Vida -= dano + danoE;
                    if (inimigo.Vida < 0)
                    {
                        inimigo.Vida = 0;
                    }
                }
            }
            else if (Nivel == 2)
            {
                if (dadoAcerto >= 19 && Especial == false)
                {
                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total: {acertoPersonagem}");
                    Console.WriteLine("Voce CRITOU o ataque");
                    dano = (dadoPersonagem.Next(1, 9) + dadoPersonagem.Next(1, 9) + Ataque) * 2;
                    Console.WriteLine($"Dano total: {dano}");
                    Console.WriteLine("========================\n");
                    inimigo.Vida -= dano;
                    if (inimigo.Vida < 0)
                    {
                        inimigo.Vida = 0;
                    }
                }
                else if (acertoPersonagem > inimigo.Armadura && Especial == false)
                {
                    Console.WriteLine("=== JOGADA GUERREIRO ===");
                    Console.WriteLine($"Rolagem: {dadoAcerto} + {Ataque}");
                    Console.WriteLine($"Total para acertar: {acertoPersonagem}");
